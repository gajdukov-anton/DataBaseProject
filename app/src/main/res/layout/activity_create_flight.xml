    <TextView
        android:id="@+id/idPlainTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Самолёт рейса: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/idPlaneSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idPlainTextView"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">
    </Spinner>

    <TextView
        android:id="@+id/idAirportTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Аэропорт рейса: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idPlaneSpinner"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/idAirportSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/idAirportTextView"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

    </Spinner>

    <EditText
        android:id="@+id/pointOfDepEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="pointOfDeparture"

        app:layout_constraintTop_toBottomOf="@id/idAirportSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/pointOfDestEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="pointOfDestination"

        app:layout_constraintTop_toBottomOf="@id/pointOfDepEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/timeOfDepEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="timeOfDeparture"

        app:layout_constraintTop_toBottomOf="@id/pointOfDestEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/timeOfDestEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:hint="timeOfDestination"

        app:layout_constraintTop_toBottomOf="@id/timeOfDepEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="description"

        app:layout_constraintTop_toBottomOf="@id/timeOfDestEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/SigInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorSignInButton"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:onClick="createNewFlight"
        android:text="@string/postButton"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>